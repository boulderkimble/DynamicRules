{
  "name": "rulevalidator",
  "version": "1.0.0",
  "publisher": "Jeff",
  "displayName": "Rule Validator",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Validate files using a C# rules engine.",
  "main": "out/extension.js",
  "engines": {
    "vscode": "^1.101.0"
  },
  "scripts": {
    "compile": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc --build",
    "clean": "tsc --build --clean"
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "vscode"
    ]
  },
  "include": [
    "src"
  ],
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/vscode": "^1.101.0",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.30.1",
    "typescript": "^5.8.3",
    "vscode": "^1.1.37"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Rule Validator",
      "properties": {
        "rulevalidator.assemblyPaths": {
          "type": "string",
          "description": "Comma delimited list of assembly (.dll) paths for input types and dynamic utility classes.",
          "default": ""
        },
      "rulevalidator.fileNamePattern": {
        "type": "string",
        "description": "Regex pattern for rule files to validate (e.g. 'rules_.*\\.(yaml|json)$').",
        "default": ".*\\.(yaml|yml|json)$"
        }
      }
    },
    "commands": [
      {
        "command": "rulevalidator.validate",
        "title": "Rule Validator: Validate"
      },
      {
        "command": "rulevalidator.setAssemblies",
        "title": "Rule Validator: Set Assemblies"
      }
    ]
  },
  "files": [
    "out",
    "cli/**"
  ]
}
